#!/usr/bin/env bash
# Build Path: /app/.heroku/vendor/

OUT_PREFIX=$1

# Use new path, containing autoconf.
export PATH="/app/.heroku/python/bin/:$PATH"
hash -r


echo "Building wehtml..."
$FILE_NAME="wkhtmltox-0.12.3_linux-generic-amd64"
SOURCE_TARBALL="http://download.gna.org/wkhtmltopdf/0.12/0.12.3/$FILE_NAME.tar.xz"

curl -L $SOURCE_TARBALL | tar zx

cd wkhtmltox-0.12.3_linux-generic-amd64
./configure --prefix=$OUT_PREFIX  &&
make
make install

# Cleanup
cd ..
